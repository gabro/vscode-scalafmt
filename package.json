{
  "name": "vscode-scalafmt",
  "displayName": "Scalafmt",
  "description": "Format Scala code using Scalafmt",
  "version": "0.1.1",
  "publisher": "gabro",
  "repository": {
    "type": "git",
    "url": "https://github.com/gabro/vscode-scalafmt.git"
  },
  "bugs": {
    "url": "https://github.com/gabro/vscode-scalafmt/issues"
  },
  "license": "MIT",
  "engines": {
    "vscode": "^1.12.0"
  },
  "categories": [
    "Formatters"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./out/src/extension",
  "icon": "icon.png",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "Scalafmt configuration",
      "properties": {
        "scalafmt.configFilePath": {
          "type": "string",
          "description": "Path of the configuration file",
          "default": "${workspaceRoot}/.scalafmt.conf"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "tsc -p ./",
    "vscode:publish": "vsce publish",
    "compile": "tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "node ./node_modules/vscode/bin/test",
    "build": "vsce package"
  },
  "dependencies": {
    "scalafmt": "^1.1.0-beta.5"
  },
  "devDependencies": {
    "@types/mocha": "^2.2.32",
    "@types/node": "^6.0.40",
    "mocha": "^2.3.3",
    "typescript": "^2.0.3",
    "vsce": "^1.29.0",
    "vscode": "^1.0.0"
  }
}
